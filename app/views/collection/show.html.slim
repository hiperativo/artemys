- @title = "Collections"
.conteudo.container.well
	.row style="margin-bottom: 10px; text-align: right"
		.span12
			- for country_code, country_name in {ve: "Venezuela", us: "USA", ec: "Ecuador"}
				= link_to image_tag("flags/#{country_code}.png", size:"20x20"), "/collection/#{country_name}", style: "margin-left: 10px;"
	.row
		= @back
		- unless @collection.blank?
			.span3
				.well
					ul.sortable.nav.nav-list
						li.nav-header.dont-sort Categorias
						li.dont-sort= link_to "Todas", params.merge(category: nil), class: "category-selector"
						
						- for category in @categorias
							li id="category-id-#{category.id}"= link_to category.title, params.merge(category: category.title), class: "category-selector"
				= link_to "#", class: "btn btn-mini btn-primary", do
					i.icon-download-alt
					|  Download our catalog	
			.gallery.span9
				ul.thumbnails.sortable
					- for categoria in @categorias.order :ordem do
						- for piece in categoria.pieces & @pieces do
							li.span3 id="piece-id-#{piece.id}" data-category="#{piece.category.title}"
								.thumbnail
									-# link_to piece.image_url(:big), data: {lightbox: true}, rel: "galeria" do
									= link_to piece, data: {lightbox: true}, format: :js, rel: "galeria", class: "fancybox.iframe" do
										= image_tag(piece.image_url :small, class: "img-round")
										- unless current_user.nil?
											.caption
												- @btn_class = piece.watermark ? 'btn-danger' : 'btn-primary'
												- @div_class = piece.watermark ? 'icon-minus' : 'icon-plus'

												= link_to "/admin/piece/#{piece.id}/edit?"+{piece:{watermark: !piece.watermark}}.to_param, class: "btn btn-small #{@btn_class} add-watermark", remote: true, method: "put" do
													div class="icon #{@div_class}"
													|  Marca d'Ã¡gua

		- else 
			.span12
				h3 style="text-align: center" There is no pieces here yet. #{link_to "Go back.", :back}